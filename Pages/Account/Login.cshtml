@page
@model TaskManagerApplication.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<form method="post">
    
    <div class="form-group">
        <label for="Email">Email:</label>
        <input asp-for="Input.Email" type="email" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="Password">Password:</label>
        <input asp-for="Input.Password" type="password" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>

<p>
    Don't have an account? <a asp-page="Register">Register</a>
</p>
