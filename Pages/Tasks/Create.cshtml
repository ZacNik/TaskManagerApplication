@page
@using System.Security.Claims
@model TaskManagerApplication.Pages.Tasks.CreateModel
@{
    ViewData["Title"] = "Create Task";
}

<h1>Create Task</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Task.Title" class="control-label">Title</label>
        <input asp-for="Task.Title" class="form-control" />
        <span asp-validation-for="Task.Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Task.Description" class="control-label">Description</label>
        <textarea asp-for="Task.Description" class="form-control"></textarea>
        <span asp-validation-for="Task.Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Task.Priority" class="control-label">Priority</label>
        <select asp-for="Task.Priority" class="form-control">
            <option value="@Models.Priority.Low">Low</option>
            <option value="@Models.Priority.Medium">Medium</option>
            <option value="@Models.Priority.High">High</option>
        </select>
        <span asp-validation-for="Task.Priority" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Task.DueDate" class="control-label">Due Date</label>
        <input asp-for="Task.DueDate" class="form-control" type="date" />
        <span asp-validation-for="Task.DueDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input asp-for="Task.IsCompleted" class="form-check-input" type="checkbox" />
        <label asp-for="Task.IsCompleted" class="form-check-label">Is Completed?</label>
    </div>

    <input type="hidden" asp-for="Task.UserId" value="@User.FindFirstValue(ClaimTypes.NameIdentifier)" />


    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
