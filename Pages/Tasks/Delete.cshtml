@page
@model TaskManagerApplication.Pages.Tasks.DeleteModel
@{
    ViewData["Title"] = "Delete Task";
}

<h1>Delete Task</h1>

<div>
    <p>Are you sure you want to delete this task?</p>
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Task.Title</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Task.Description</dd>
        <dt class="col-sm-2">Priority</dt>
        <dd class="col-sm-10">@Model.Task.Priority</dd>
        <dt class="col-sm-2">Due Date</dt>
        <dd class="col-sm-10">@Model.Task.DueDate.ToShortDateString()</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Task.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Tasks">Cancel</a>
    </form>
</div>
